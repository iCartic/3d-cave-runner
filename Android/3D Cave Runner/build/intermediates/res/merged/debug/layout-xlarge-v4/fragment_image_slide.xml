<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/skz_tablet_wrap"
        android:padding="10dp"
        android:id="@+id/slideshow_frame_container"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:id="@+id/slideshow_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <com.skillz.widget.FontTextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="2"
                android:text="A BRAND NEW WAY TO PLAY"
                android:textColor="@color/balance_item_white"
                android:textSize="55dp"
                android:textStyle="bold" />

            <com.skillz.widget.FontTextView
                android:id="@+id/description_text"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Skillz"
                app:font="@string/skz_neue_roman"
                android:textColor="@color/balance_item_white"
                android:textStyle="bold" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:adjustViewBounds="true"
                android:background="@drawable/skz_slideshow_image_frame"
                android:id="@+id/image_slide_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/gfx_ftue_one_2x"
                />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>