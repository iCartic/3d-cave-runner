<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg_welcome_back"
    android:isScrollContainer="true"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skz_leaderboard_header"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/skz_leaderboard_loading"
            >

            <com.skillz.widget.ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                />
            <com.skillz.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skz_leaderboard_loading"
                android:textColor="#363a46"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skz_leaderboard_list"
            tools:visibility="invisible"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:visibility="gone"
            android:id="@+id/skz_leaderboard_home_scrollview"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/skz_leaderboard_home_container"
                />
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/unlock_layer"
                android:visibility="gone"
                tools:visibility="visible"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:minHeight="50dp"
                    >
                    <LinearLayout
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="96dp"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:padding="8dp"
                        android:background="@drawable/save_account_elements_bg"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/decor_drkangles_brm_lt"
                                android:layout_marginRight="40dp"
                                android:layout_marginEnd="40dp"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/decor_drkangles_brm_rt"
                                android:layout_marginLeft="40dp"
                                android:layout_marginStart="40dp"/>

                        </LinearLayout>

                        <com.skillz.widget.FontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="26sp"
                            app:gradientColors="@array/versus_vs"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/save_account_list_bg"
                            app:font="@string/skz_neue_black_cond"
                            android:text="@string/skz_leaderboards_welcome"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/save_account_list_bg"
                            >
                            <com.skillz.widget.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="56sp"
                                app:font="@string/skz_neue_black_cond"
                                app:gradientColors="@array/cash_gradient_colors"
                                android:text="@string/skz_leaderboard_default_cash_prize"
                                android:id="@+id/skz_leaderboard_locked_total_prizes"
                                android:layout_marginRight="5dp"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                >
                                <com.skillz.widget.FontTextView
                                    android:id="@+id/leaderboard_locked_title_in_prizes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="21sp"
                                    app:gradientColors="@array/cash_gradient_colors"
                                    app:font="@string/skz_neue_light"
                                    android:text="@string/skz_leaderboard_title_in_prizes"
                                    />
                                <com.skillz.widget.FontTextView
                                    android:id="@+id/leaderboard_locked_title_guaranteed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    app:gradientColors="@array/cash_gradient_colors"
                                    app:font="@string/skz_neue_black_cond"
                                    android:text="@string/skz_leaderboard_title_guaranteed"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <com.skillz.widget.FontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="25sp"
                            android:layout_marginTop="5dp"
                            app:gradientColors="@array/versus_vs"
                            android:background="@drawable/save_account_list_bg"
                            app:font="@string/skz_neue_light"
                            android:visibility="gone"
                            tools:visibility="visible"
                            tools:text="Play 5 more to unlock"
                            android:id="@+id/skz_leaderboard_unlock"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/leagues_big_medal"
                        android:id="@+id/skz_leaderboard_lock_trophy"
                        android:layout_gravity="center_horizontal"
                        />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/skz_leaderboard_tutorial_container"
            />
    </FrameLayout>
</LinearLayout>
