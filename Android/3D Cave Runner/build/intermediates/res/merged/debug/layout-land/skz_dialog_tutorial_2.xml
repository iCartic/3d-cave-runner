<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:background="@drawable/dialog_bg"
            android:orientation="vertical">

            <com.skillz.widget.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/skz_ticketz_tut2_header"
                android:textColor="@color/skz_ticketz_tut_header"
                android:textSize="23sp"
                app:font="@string/skz_neue_black_cond"
                />

            <com.skillz.widget.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/skz_ticketz_tut2_text"
                android:textColor="@color/skz_ticketz_tut_text"
                android:textSize="16sp"
                app:font="@string/skz_neue_black_cond"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">

                <com.skillz.widget.FontButton
                    android:id="@+id/skz_ticketz_tut2_skip_btn"
                    style="@style/Button.Dialog.Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/skz_ticketz_tut_skip_btn_pad"
                    android:paddingRight="@dimen/skz_ticketz_tut_skip_btn_pad"
                    android:text="@string/skz_skip"
                    />

                <com.skillz.widget.FontButton
                    android:id="@+id/skz_ticketz_tut2_next_btn"
                    style="@style/Button.Dialog.Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skz_next"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/skz_ticketz_tut2_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_anim_arrow_right"
        />
</RelativeLayout>
