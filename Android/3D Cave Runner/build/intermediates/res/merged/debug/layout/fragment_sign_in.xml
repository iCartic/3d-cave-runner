<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3F4660"
                >

            <ImageView
                    android:id="@+id/skz_sign_in_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

            <LinearLayout
                    android:id="@+id/sign_in_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    >

                <com.skillz.widget.FontTextView
                        android:id="@+id/sign_in_welcome_back"
                        android:layout_marginTop="73dp"
                        style="@style/DialogTitle"
                        android:text="@string/skz_sign_in_welcome_back"
                        android:textColor="@color/primary_button_text"
                        android:textSize="40sp"
                        app:font="@string/skz_neue_black_cond"
                        />

                <com.skillz.widget.FontTextView
                        android:id="@+id/sign_in_to_skillz"
                        android:layout_marginBottom="25dp"
                        style="@style/DialogTitle"
                        android:text="@string/skz_sign_in_to_skillz"
                        android:textColor="@color/primary_button_text"
                        android:textSize="40sp"
                        app:font="@string/skz_neue_black_cond"
                        />

                <com.skillz.widget.FontEditText
                        android:id="@+id/sign_in_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        style="@style/Input"
                        android:hint="@string/skz_sign_in_username"
                        android:inputType="textEmailAddress"
                        />

                <com.skillz.widget.FontEditText
                        android:id="@+id/sign_in_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        style="@style/Input"
                        android:hint="@string/skz_sign_in_password"
                        android:inputType="textPassword"
                        />

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_gravity="bottom"
                android:background="@drawable/bottom_bar_account"
                >

            <com.skillz.widget.FontButton
                    android:id="@+id/sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/Button.Primary"
                    android:text="@string/skz_sign_in"
                    />

            <com.skillz.widget.FontTextView
                    android:id="@+id/sign_in_forgot_password"
                    style="@style/DialogTitle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:padding="12dp"
                    android:text="@string/skz_sign_in_forgot_password"
                    android:textColor="@color/ftue_sub_copy"
                    android:textSize="14sp"
                    app:font="@string/skz_neue_light"
                    />

        </LinearLayout>
    </LinearLayout>

</ScrollView>

