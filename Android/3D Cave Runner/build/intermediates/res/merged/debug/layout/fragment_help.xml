<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

    <ImageView
            android:id="@+id/skz_help_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/bg_app"
            />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

            <LinearLayout
                    android:id="@+id/help_reset_tutorial"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    style="@style/MenuItem"
                    >

                <com.skillz.widget.FontTextView
                        android:text="@string/skz_help_reset_tutorial"
                        style="@style/MenuText"
                        />

                <ImageView style="@style/MenuArrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/help_game_tutorial"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                >

                <com.skillz.widget.FontTextView
                    android:text="@string/skz_help_game_tutorial"
                    style="@style/MenuText"
                    />

                <ImageView style="@style/MenuArrow"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/help_faq"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    style="@style/MenuItem"
                    >

                <com.skillz.widget.FontTextView
                        android:text="@string/skz_help_faq"
                        style="@style/MenuText"
                        />

                <ImageView style="@style/MenuArrow"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/help_contact"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    style="@style/MenuItem"
                    >

                <com.skillz.widget.FontTextView
                        android:text="@string/skz_help_contact"
                        style="@style/MenuText"
                        />

                <ImageView style="@style/MenuArrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/help_support_messages"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                >

                <com.skillz.widget.FontTextView
                    android:text="@string/skz_help_support_messages"
                    style="@style/MenuText"
                    />

                <TextView
                    android:id="@+id/help_badge_text"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/skz_badge_circle"/>

                <ImageView style="@style/MenuArrow"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
