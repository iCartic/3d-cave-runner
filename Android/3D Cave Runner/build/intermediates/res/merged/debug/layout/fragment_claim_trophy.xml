<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:minWidth="340dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/skz_trophy_claim_dialog_container"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.skillz.util.AutoResizeTextView
                android:id="@+id/congratulations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:minWidth="340dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/skz_trophies_congratulations"
                android:textColor="#FFFFFF"
                android:textSize="12pt"
                android:textStyle="bold"
                app:font="@string/skz_neue_black_cond"
                tools:text="Congratulations!"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.skillz.util.AutoResizeTextView
                    android:id="@+id/skz_trophy_claimed_cash_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/skz_trophy_claim_stroke"
                    android:textSize="70pt"
                    android:textStyle="bold"
                    app:font="@string/skz_neue_black_cond"/>

                <ImageView
                    android:id="@+id/skz_trophy_claimed_image_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="-3dp"
                    android:src="@drawable/ic_z_med"/>

                <com.skillz.util.AutoResizeTextView
                    android:id="@+id/skz_trophy_claimed_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/skz_trophy_claim_stroke"
                    android:textSize="70pt"
                    android:textStyle="bold"
                    app:font="@string/skz_neue_black_cond"
                    tools:text="5000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.skillz.widget.FontButton
                    android:id="@+id/skz_trophy_claim"
                    style="@style/Button.Dialog.Confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="250dp"
                    android:text="OK"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    app:font="@string/skz_neue_black_cond"
                    tools:text="OK"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
