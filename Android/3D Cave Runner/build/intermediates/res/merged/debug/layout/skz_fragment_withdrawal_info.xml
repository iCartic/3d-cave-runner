<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_unlocked">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/skz_ticketz_detail_overlay"
        />
    <com.skillz.widget.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font="@string/skz_neue_black_cond"
        android:text="@string/skz_personal_info_title"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/skz_ticketz_detail_overlay"
        android:id="@+id/info_content_header"
        />

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:foregroundGravity="center"
      android:layout_above="@+id/skz_withdrawal_geotrust_logo">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/info_content_container">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:orientation="vertical">

                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                    <com.skillz.widget.FontEditText
                      android:id="@+id/first"
                      android:singleLine="true"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="@string/skz_first"
                      style="@style/Input"
                      />
                    <com.skillz.widget.FontEditText
                      android:id="@+id/last"
                      android:singleLine="true"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="@string/skz_last"
                      style="@style/Input"
                      />
                    <com.skillz.widget.FontEditText
                      android:id="@+id/street"
                      android:singleLine="true"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="@string/skz_personal_info_address1_hint"
                      style="@style/Input"
                      />
                    <com.skillz.widget.FontEditText
                      android:id="@+id/apt"
                      android:singleLine="true"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="@string/skz_personal_info_address2_hint"
                      style="@style/Input"
                      />
                    <com.skillz.widget.FontEditText
                      android:id="@+id/city"
                      android:singleLine="true"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="@string/skz_personal_info_address_city_hint"
                      style="@style/Input"
                      />
                    <Spinner
                      android:id="@+id/country"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="6dp"
                      android:layout_marginLeft="2dp"
                      android:layout_marginRight="2dp"
                      android:layout_gravity="center_horizontal"
                      android:gravity="center"
                      android:background="@drawable/dropdown_menu"
                      />

                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                        <com.skillz.widget.FontEditText
                          android:id="@+id/state"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:hint="@string/skz_personal_info_address_state_hint"
                          android:singleLine="true"
                          style="@style/Input"
                          />
                        <com.skillz.widget.FontEditText
                          android:id="@+id/zipcode"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:layout_marginLeft="0dp"
                          android:singleLine="true"
                          android:hint="@string/skz_personal_info_address_zip_hint"
                          android:inputType="number"
                          style="@style/Input"
                          />
                    </LinearLayout>

                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                        <com.skillz.widget.FontEditText
                          android:id="@+id/phone"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:hint="@string/skz_personal_info_phone_hint"
                          android:inputType="phone"
                          android:singleLine="true"
                          style="@style/Input"
                          />
                        <ImageView
                          android:id="@+id/skz_withdrawal_help_withdrawal_amt"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginRight="5dp"
                          android:src="@drawable/ic_question_form"
                          />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/skz_withdrawal_cash_out_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="horizontal">

        <com.skillz.widget.FontButton
          android:id="@+id/skz_withdrawal_cancel"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/skz_cancel"
          android:padding="0dp"
          android:layout_marginRight="5dp"
          style="@style/Button.NextNewPLOW"
          />
        <com.skillz.widget.FontButton
            android:id="@+id/skz_withdrawal_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="0dp"
            android:text="@string/skz_confirmation"
            android:padding="0dp"
            style="@style/Button.PlayAgainNewPLOW"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/skz_withdrawal_geotrust_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skz_withdrawal_cash_out_footer"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/img_geotrust_logo"
        />
</RelativeLayout>
