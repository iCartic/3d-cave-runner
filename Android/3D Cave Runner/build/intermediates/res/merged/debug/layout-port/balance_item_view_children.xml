<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/balanceItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingRight="3dp">

        <ImageView
            android:id="@+id/balanceItemGameAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <com.skillz.widget.FontTextView
            android:id="@+id/balanceItemEventLabel"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/skz_title_banner_event"
            android:textColor="#333"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"/>

        <com.skillz.widget.FontTextView
            android:id="@+id/balanceItemDateLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/skz_title_banner_date_time"
            android:layout_weight="1"
            android:textColor="#333"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/z_logo_amount"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/ic_z_med"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                />
            <com.skillz.widget.FontTextView
                android:id="@+id/balanceItemAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/skz_title_banner_plus_minus"
                android:textColor="#333"
                app:gradientColors="@array/cash_gradient_colors"
                app:font="@string/skz_neue_black_cond"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/z_logo_balance"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/ic_z_med"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                />
            <com.skillz.widget.FontTextView
                android:id="@+id/balanceItemBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/skz_title_banner_balance"
                android:textColor="#333"
                app:gradientColors="@array/cash_gradient_colors"
                app:font="@string/skz_neue_black_cond"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
