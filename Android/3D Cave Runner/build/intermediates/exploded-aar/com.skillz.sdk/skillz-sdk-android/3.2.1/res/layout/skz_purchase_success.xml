<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.85"
        android:background="@drawable/bg_app"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="30sp"
                    android:textColor="@android:color/black"
                    android:text="SUCCESS!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/live_event_name"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:text="Live Event Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/tier_name"
                    android:text="Gold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@android:color/black"
                            android:text="Purchase Amount"
                            android:gravity="left"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:id="@+id/purchase_amount"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="$4.00"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@android:color/black"
                            android:text="Entries Purchased"
                            android:gravity="left"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:id="@+id/purchased_entries"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="3"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@android:color/black"
                            android:text="Total Entries"
                            android:gravity="left"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:textSize="15sp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:id="@+id/total_entries"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="3"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.15"
        android:background="@android:color/black"
        android:layout_height="0dp">

        <Button
            style="@style/Button.Primary"
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:text="OK, I'M READY TO WIN"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
