<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_unlocked"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_above="@+id/skz_deposit_confirm_button_group">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingBottom="-15dp"
            android:background="@drawable/save_account_elements_bg">

            <com.skillz.widget.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skz_store_deposit_received"
                app:font="@string/skz_neue_black_cond"
                android:textSize="30dp"
                android:gravity="center"
                style="@style/PrimaryText.Congrats"
                android:background="@drawable/save_account_list_bg"
                />
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginRight="-15dp"
                    android:background="@drawable/dialog_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.skillz.widget.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skz_store_prev_balance"
                            app:font="@string/skz_neue_roman"
                            android:textSize="16sp"
                            android:textColor="@color/skz_deposit_confirm_text_primary"
                            />
                        <com.skillz.widget.FontTextView
                            android:id="@+id/skz_deposit_confirm_balance_previous"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            app:font="@string/skz_neue_bold"
                            android:textSize="20sp"
                            android:textColor="@color/skz_deposit_confirm_text_light"
                            tools:text="$0.50"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#999"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.skillz.widget.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skz_store_deposit_amount"
                            app:font="@string/skz_neue_roman"
                            android:textSize="16sp"
                            android:textColor="@color/skz_deposit_confirm_text_primary"
                            />
                        <com.skillz.widget.FontTextView
                            android:id="@+id/skz_deposit_confirm_deposit_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            app:font="@string/skz_neue_bold"
                            android:textSize="20sp"
                            android:textColor="@color/skz_deposit_confirm_text_primary"
                            tools:text="$10.00"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#999"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.skillz.widget.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skz_store_deposit_bonus"
                            app:font="@string/skz_neue_roman"
                            android:textSize="16sp"
                            android:textColor="@color/skz_deposit_confirm_text_primary"
                            />
                        <com.skillz.widget.FontTextView
                            android:id="@+id/skz_deposit_confirm_bonus_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            app:font="@string/skz_neue_bold"
                            android:textSize="20sp"
                            android:textColor="@color/skz_deposit_confirm_text_primary"
                            tools:text="$2.00"
                            />
                    </LinearLayout>

                    <View
                        android:id="@+id/skz_deposit_promo_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#999"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/skz_deposit_promo_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <com.skillz.widget.FontTextView
                            android:id="@+id/skz_deposit_promo_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skz_store_deposit_promo"
                            app:font="@string/skz_neue_roman"
                            android:textSize="16sp"
                            android:textColor="@color/skz_deposit_confirm_text_primary"
                            />
                        <com.skillz.widget.FontTextView
                            android:id="@+id/skz_deposit_promo_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            app:font="@string/skz_neue_bold"
                            android:textSize="20sp"
                            android:textColor="@color/skz_deposit_confirm_text_primary"
                            tools:text="$2.00"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10dp"
                        android:background="#999"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.skillz.widget.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skz_store_new_balance"
                            app:font="@string/skz_neue_bold"
                            android:textSize="22sp"
                            android:textColor="@color/skz_deposit_confirm_text_primary"
                            />
                        <com.skillz.widget.FontTextView
                            android:id="@+id/skz_deposit_confirm_balance_new"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            app:font="@string/skz_neue_black_cond"
                            app:gradientColors="@array/cash_gradient_colors"
                            android:textSize="27sp"
                            android:textColor="@color/cash_top"
                            tools:text="$12.50"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/skz_deposit_confirm_button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="3dp"
        android:layout_margin="5dp"
        android:background="@drawable/save_account_elements_bg">

        <com.skillz.widget.FontButton
            android:id="@+id/skz_btn_deposit_confirm_okay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/skz_deposit_confirm_ok"
            style="@style/Button.PlayAgainNewPLOW"
            />
    </FrameLayout>
</RelativeLayout>
