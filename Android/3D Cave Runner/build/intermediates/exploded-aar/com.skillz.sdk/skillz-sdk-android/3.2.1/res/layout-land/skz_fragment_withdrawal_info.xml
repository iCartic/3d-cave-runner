<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_unlocked">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/skz_ticketz_detail_overlay"
        />
    <com.skillz.widget.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font="@string/skz_neue_black_cond"
        android:text="@string/skz_personal_info_title"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/info_content_header"
        android:background="@color/skz_ticketz_detail_overlay"
        />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/info_content_container"
        android:layout_above="@+id/skz_withdrawal_info_footer">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.skillz.widget.FontEditText
                            android:id="@+id/first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/skz_first"
                            style="@style/Input"
                            />
                        <com.skillz.widget.FontEditText
                            android:id="@+id/last"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/skz_last"
                            style="@style/Input"
                            />
                        <com.skillz.widget.FontEditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/skz_personal_info_phone_hint"
                            android:inputType="phone"
                            style="@style/Input"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.skillz.widget.FontEditText
                                android:id="@+id/state"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/skz_personal_info_address_state_hint"
                                style="@style/Input"
                                />
                            <com.skillz.widget.FontEditText
                                android:id="@+id/zipcode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="0dp"
                                android:hint="@string/skz_personal_info_address_zip_hint"
                                android:inputType="number"
                                style="@style/Input"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.skillz.widget.FontEditText
                            android:id="@+id/street"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/skz_personal_info_address1_hint"
                            style="@style/Input"
                            />
                        <com.skillz.widget.FontEditText
                            android:id="@+id/apt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/skz_personal_info_address2_hint"
                            style="@style/Input"
                            />
                        <com.skillz.widget.FontEditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/skz_personal_info_address_city_hint"
                            style="@style/Input"
                            />
                        <Spinner
                            android:id="@+id/country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:background="@drawable/dropdown_menu"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="right"
                            android:src="@drawable/img_geotrust_logo"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/skz_withdrawal_info_footer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">

            <com.skillz.widget.FontButton
                android:id="@+id/skz_withdrawal_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/skz_cancel"
                android:padding="0dp"
                android:layout_marginRight="5dp"
                style="@style/Button.NextNewPLOW"
                />
            <com.skillz.widget.FontButton
                android:id="@+id/skz_withdrawal_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="0dp"
                android:text="@string/skz_submit"
                android:padding="0dp"
                style="@style/Button.PlayAgainNewPLOW"
                />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
