<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:minHeight="350dp"
        android:orientation="horizontal"
        android:background="@drawable/skz_tablet_wrap"
        android:id="@+id/slideshow_frame_container"
        android:padding="10dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:id="@+id/slideshow_text_container"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical">

            <com.skillz.widget.FontTextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="2"
                android:text="HOW DOES IT WORK"
                android:textColor="@color/balance_item_white"
                android:textSize="35dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />

            <com.skillz.widget.FontTextView
                android:id="@+id/description_text"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Skillz"
                android:textColor="@color/balance_item_white"
                android:textStyle="bold" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:adjustViewBounds="true"
                android:background="@drawable/skz_slideshow_image_frame"
                android:id="@+id/image_slide_image_view"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:src="@drawable/gfx_ftue_one_2x"
                />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>