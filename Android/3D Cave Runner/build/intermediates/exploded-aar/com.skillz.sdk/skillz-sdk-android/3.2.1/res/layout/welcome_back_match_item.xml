<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skillz="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="@drawable/avatar_bg_shadow">

    <com.skillz.widget.FontTextView
        android:id="@+id/match_item_win_or_lose_text_view"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="26dp"
        android:text="L"
        android:gravity="center"
        skillz:font="fonts/HelveticaNeue-CondensedBold.otf"/>

    <ImageView
        android:id="@+id/match_item_user_avatar"
        android:layout_width="42dp"
        android:scaleType="centerCrop"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:background="#000"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <com.skillz.widget.FontTextView
            android:id="@+id/match_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222"
            android:textSize="16dp"
            android:text="TastyBarbarian"
            skillz:font="fonts/HelveticaNeue-Medium.otf"
            />

        <com.skillz.widget.FontTextView
            android:id="@+id/match_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:textSize="16dp"
            android:text="5hr 5min ago"
            skillz:font="fonts/HelveticaNeue-Medium.otf"
            />

    </LinearLayout>

    <com.skillz.widget.FontTextView
        android:id="@+id/match_item_cash"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:text="--"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:gravity="center"
        skillz:font="fonts/HelveticaNeue-Bold.otf"/>

</LinearLayout>
