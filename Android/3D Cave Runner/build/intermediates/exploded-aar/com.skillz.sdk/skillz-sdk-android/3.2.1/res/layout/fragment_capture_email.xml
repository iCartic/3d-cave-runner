<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F4660"
    >
    <ImageView
        android:id="@+id/skz_capture_email_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/bg_unlocked"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                >


                <LinearLayout
                    android:id="@+id/capture_email_non_deposit_copy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/save_account_logo"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/save_account_elements_bg"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_marginTop="30dp"
                >

                <LinearLayout
                    android:id="@+id/capture_email_deposit_copy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <com.skillz.widget.FontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center"
                        app:font="@string/skz_neue_black_cond"
                        android:shadowColor="@color/capture_drop_shadow"
                        android:shadowRadius="2"
                        android:textColor="#ffffff"
                        android:text="@string/skz_capture_email_congratulations"
                        android:textSize="36sp"
                        />
                    <com.skillz.widget.FontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:font="@string/skz_neue_bold"
                        android:shadowColor="@color/capture_drop_shadow"
                        android:shadowRadius="1"
                        android:textColor="#ffffff"
                        android:text="@string/skz_capture_email_completed_deposit"
                        android:textSize="16sp"
                        />
                    <com.skillz.widget.FontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:font="@string/skz_neue_roman"
                        android:shadowColor="@color/capture_drop_shadow"
                        android:shadowRadius="1"
                        android:textColor="#ffffff"
                        android:text="@string/skz_capture_email_enter_and_save"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/save_account_list_bg"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/save_account_ok_logo"
                            android:layout_marginRight="10dp"
                            />
                        <com.skillz.widget.FontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:font="@string/skz_neue_light"
                            android:shadowColor="@color/capture_drop_shadow"
                            android:shadowRadius="2"
                            android:textColor="#ffffff"
                            android:text="@string/skz_capture_email_log_in"
                            android:textSize="18sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/save_account_play_logo"
                            android:layout_marginRight="10dp"
                            />
                        <com.skillz.widget.FontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:font="@string/skz_neue_light"
                            android:shadowColor="@color/capture_drop_shadow"
                            android:shadowRadius="2"
                            android:textColor="#ffffff"
                            android:text="@string/skz_capture_email_play_other_games"
                            android:textSize="18sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/save_account_ticket_logo"
                            android:layout_marginRight="10dp"
                            />
                        <com.skillz.widget.FontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:font="@string/skz_neue_light"
                            android:shadowColor="@color/capture_drop_shadow"
                            android:shadowRadius="2"
                            android:textColor="#ffffff"
                            android:text="@string/skz_capture_email_earn_extra_rewards"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <com.skillz.widget.FontEditText
                        android:id="@+id/capture_email_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        style="@style/Input"
                        android:gravity="center_horizontal"
                        app:font="@string/skz_neue_light"
                        android:hint="@string/skz_capture_email_enter_email_hint"
                        android:inputType="textEmailAddress"
                        />
                    <com.skillz.widget.FontEditText
                        android:id="@+id/capture_email_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        style="@style/Input"
                        android:gravity="center_horizontal"
                        app:font="@string/skz_neue_light"
                        android:hint="@string/skz_capture_email_enter_password_hint"
                        android:inputType="textPassword"
                        />
                    <com.skillz.widget.FontEditText
                        android:id="@+id/capture_email_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        style="@style/Input"
                        android:gravity="center_horizontal"
                        app:font="@string/skz_neue_light"
                        android:hint="@string/skz_capture_email_re_enter_password_hint"
                        android:inputType="textPassword"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    >
                    <CheckBox
                        android:id="@+id/capture_email_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/capture_checkbox_selector"
                        android:checked="true"
                        />
                    <com.skillz.widget.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/capture_email_checkbox"
                        app:font="@string/skz_neue_light"
                        android:textColor="#ffffff"
                        android:text="@string/skz_capture_email_sign_up_prompt"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/save_account_elements_bg"
                >
                <com.skillz.widget.FontButton
                  android:id="@+id/capture_user_login"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:text="EXISTING USER LOGIN"
                  style="@style/Button.Blue"/>
                <com.skillz.widget.FontButton
                    android:id="@+id/capture_email_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/Button.Primary"
                    android:textSize="15sp"
                    android:text="@string/skz_submit"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>