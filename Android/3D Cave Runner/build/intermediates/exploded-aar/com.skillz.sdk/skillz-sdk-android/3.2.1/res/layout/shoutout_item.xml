<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:background="#e4e4e4"
    android:padding="4dp"
    android:gravity="center_vertical"
    android:id="@+id/skz_shoutout_item"
    >

    <ImageView
        android:id="@+id/skz_shoutout_blimp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_blimp_shoutouts"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/skz_shoutout_lock"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_lock_shoutouts"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <com.skillz.widget.FontTextView
        android:id="@+id/skz_shoutout_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:shadowColor="#ffffff"
        android:shadowRadius="1"
        android:textSize="15sp"
        android:textColor="#232733"
        android:maxLines="1"
        app:font="@string/skz_neue_black_cond"
        tools:text="I can't stop winning"/>

    <ImageView
        android:id="@+id/skz_shoutout_z_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_z_med"
        android:layout_margin="1dp"
        android:visibility="gone"
        android:adjustViewBounds="true"
        tools:visibility="visible"/>

    <com.skillz.widget.FontTextView
        android:id="@+id/skz_shoutout_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        app:font="@string/skz_neue_black_cond"
        tools:text="100"
        android:textSize="18sp"
        android:textColor="#387aa4"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>
