<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:padding="8dp"
  android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="5"
        >
        <LinearLayout
            android:id="@+id/slideshow_text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            >

            <com.skillz.widget.FontTextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="2"
                android:padding="4dp"
                android:text="A BRAND NEW WAY TO PLAY"
                app:font="@string/skz_neue_roman"
                android:textColor="@color/balance_item_white"
                android:textSize="28dp"
                android:textStyle="bold" />

            <com.skillz.widget.FontTextView
                android:id="@+id/description_text"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Skillz"
                app:font="@string/skz_neue_roman"
                android:textColor="@color/balance_item_white"
                android:textStyle="bold" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_margin="8dp">
            <ImageView
                android:padding="3dip"
                android:background="@drawable/skz_slideshow_image_frame"
                android:adjustViewBounds="true"
                android:id="@+id/image_slide_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/gfx_ftue_one_2x"
                />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>