<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_unlocked">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="180dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/trophy_congrat_bg_transp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2.6"
                android:background="@drawable/trophy_congrat_bg"
                android:orientation="horizontal"
                android:gravity="center|center_vertical">

                <com.skillz.widget.FontTextView
                    android:id="@+id/skz_trophies_congratulations_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:shadowColor="#73000000"
                    android:shadowDy="3.0"
                    android:shadowRadius="3.0"
                    android:text="@string/skz_congratulations"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/skz_trophies_title"
                    android:textStyle="bold"
                    app:font="@string/skz_neue_black_cond"
                    android:gravity="center_vertical"/>

                <com.skillz.widget.FontTextView
                    android:id="@+id/skz_trophies_congratulations_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:shadowColor="#73000000"
                    android:shadowDy="3.0"
                    android:shadowRadius="3.0"
                    android:text="@string/skz_trophies_earn_achievement"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/skz_trophies_title"
                    android:textStyle="bold"
                    app:font="@string/skz_neue_black_cond"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2.7"
                android:background="@drawable/trophy_congrat_bg"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <com.skillz.widget.FontTextView
                    android:id="@+id/skz_trophies_congratulations_trophy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/skz_trophies_title"
                    app:font="@string/skz_neue_light"
                    tools:text="TAUNTMASTER"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/trophy_congrat_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/skz_trophies_congratulations_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_trophy_icon"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="180dp"
            android:layout_weight="3.8"
            android:background="@drawable/trophy_congrat_bg"
            android:orientation="vertical">

            <com.skillz.widget.FontButton
                android:id="@+id/skz_trophies_congratulations_next"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/skz_next"
                android:textStyle="bold"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/skz_trophies_next_button_title"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
