<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3F4660"
            >

        <ImageView
                android:id="@+id/skz_sign_in_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

        <LinearLayout
                android:id="@+id/sign_in_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    >

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.25"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                    <com.skillz.widget.FontTextView
                            android:id="@+id/sign_in_welcome_back"
                            style="@style/DialogTitle"
                            android:text="@string/skz_sign_in_welcome_back"
                            android:textColor="@color/primary_button_text"
                            android:textSize="40sp"
                            app:font="@string/skz_neue_black_cond"
                            />

                    <com.skillz.widget.FontTextView
                            android:id="@+id/sign_in_to_skillz"
                            style="@style/DialogTitle"
                            android:text="@string/skz_sign_in_to_skillz"
                            android:textColor="@color/primary_button_text"
                            android:textSize="40sp"
                            app:font="@string/skz_neue_black_cond"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >

                    <com.skillz.widget.FontEditText
                            android:id="@+id/sign_in_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            style="@style/Input"
                            android:hint="@string/skz_sign_in_username"
                            android:inputType="textEmailAddress"
                            />

                    <com.skillz.widget.FontEditText
                            android:id="@+id/sign_in_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            style="@style/Input"
                            android:hint="@string/skz_sign_in_password"
                            android:inputType="textPassword"
                            />

                    <com.skillz.widget.FontButton
                            android:id="@+id/sign_in"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="22dp"
                            style="@style/Button.Primary"
                            android:text="@string/skz_sign_in"
                            />

                    <com.skillz.widget.FontTextView
                            android:id="@+id/sign_in_forgot_password"
                            style="@style/DialogTitle"
                            android:clickable="true"
                            android:text="@string/skz_sign_in_forgot_password"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/primary_button_text"
                            android:textSize="14sp"
                            app:font="@string/skz_neue_light"
                            />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</ScrollView>
