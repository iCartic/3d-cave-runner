<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/bg_unlocked">

    <ImageView
        android:id="@+id/skz_verify_email_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/save_account_logo"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:layout_above="@+id/verify_element"
        />

    <LinearLayout
        android:id="@+id/verify_element"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/save_account_elements_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/save_account_list_bg">

                <com.skillz.widget.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/skz_verify_email_header"
                    app:font="@string/skz_neue_black_cond"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    />
                <com.skillz.widget.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/skz_verify_email_instructions"
                    android:textColor="@color/balance_item_white"
                    android:textSize="15dp"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginTop="9dp"
                    app:font="@string/skz_neue_roman" />
            </LinearLayout>

            <com.skillz.widget.FontEditText
                android:id="@+id/skz_verify_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Input"
                android:gravity="center"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:hint="@string/skz_verify_email_hint"
                android:textColor="@color/input_hint"
                android:inputType="textEmailAddress"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:background="@drawable/save_account_elements_bg">

        <com.skillz.widget.FontButton
            android:id="@+id/skz_verify_email_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:text="@string/skz_verify_email_send"
            style="@style/Button.PlayAgainNewPLOW"
            android:background="@drawable/primary_button_with_disabled"
            />
        <com.skillz.widget.FontButton
            android:id="@+id/skz_verify_email_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skz_ok"
            style="@style/Button.Primary"
            android:background="@drawable/blue_button"
            android:visibility="gone"
            tools:visibility="visible"
            />
    </LinearLayout>
</RelativeLayout>
