<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <com.skillz.widget.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Banner"
        android:text="@string/skz_withdrawal_info_title"
        />
    <com.skillz.widget.FontEditText
        android:id="@+id/street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Input"
        android:inputType="text"
        android:hint="@string/skz_withdrawal_address_hint"
        />
    <com.skillz.widget.FontEditText
        android:id="@+id/apt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Input"
        android:inputType="text"
        android:hint="@string/skz_withdrawal_unit_hint"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <com.skillz.widget.FontEditText
        android:id="@+id/post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Input"
        android:hint="@string/skz_withdrawal_postal_hint"
        />
    <com.skillz.widget.FontEditText
        android:id="@+id/state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        style="@style/Input"
        android:inputType="text"
        android:hint="@string/skz_withdrawal_state_hint"
        />
    </LinearLayout>
    <com.skillz.widget.FontEditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Input"
        android:inputType="text"
        android:hint="@string/skz_withdrawal_city_hint"
        />
    <Spinner
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/dropdown_menu"
        />
</merge>
