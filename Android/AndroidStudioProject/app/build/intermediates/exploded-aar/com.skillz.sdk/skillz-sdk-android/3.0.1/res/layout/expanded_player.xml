<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/medal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            />
        <com.skillz.widget.AvatarImageView
            android:id="@+id/avatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="4dp"
            android:background="@drawable/avatar_bg_shadow"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:orientation="vertical"
            >
            <com.skillz.widget.FontTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="username"
                android:paddingBottom="4dp"
                android:textColor="@color/main_text_color"
                app:font="fonts/HelveticaNeue-CondensedBlack.otf"
                />

            <com.skillz.widget.FontTextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_score"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_marginTop="-4dp"
                android:textSize="12sp"
                android:textColor="@color/main_text_color"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:gravity="end|center_vertical"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/prize_group"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="end|center_vertical">

                <ImageView
                    android:id="@+id/view_prize_z"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:gravity="end|center_vertical"
                    android:src="@drawable/ic_z_footer"/>

                <com.skillz.widget.FontTextView
                    android:id="@+id/prize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:minWidth="20dp"
                    android:gravity="end|center_vertical"
                    app:font="fonts/HelveticaNeue-CondensedBlack.otf"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ticketz_group"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="end|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_ticketz_footer"/>

                <com.skillz.widget.FontTextView
                    android:id="@+id/ticketz"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:minWidth="20dp"
                    android:gravity="end|center_vertical"
                    app:font="fonts/HelveticaNeue-CondensedBlack.otf"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_taunt_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_taunt_bubble_match_stream_skz"
        >

        <TextView
            android:id="@+id/title_taunt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="5dp"/>

    </RelativeLayout>

</RelativeLayout>
