<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_money"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
                android:layout_marginTop="50dp"
            >

        <com.skillz.widget.FontTextView
                android:id="@+id/skz_claimed_promo_cash_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="100sp"
                android:gravity="center"
                app:font="@string/skz_neue_black_cond"
                app:gradientColors="@array/skz_cash_promo_gradient"
                app:strokeColor="@color/skz_cash_promo_stroke"
                app:strokeWidth="3dp"
                android:shadowColor="#99000000"
                android:shadowRadius="3.0"
                android:shadowDy="4.0"
                android:text="+"
                />

        <com.skillz.widget.FontTextView
                android:id="@+id/skz_claimed_promo_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="100sp"
                android:gravity="center"
                app:font="@string/skz_neue_black_cond"
                app:gradientColors="@array/skz_cash_promo_gradient"
                app:strokeColor="@color/skz_cash_promo_stroke"
                app:strokeWidth="3dp"
                android:shadowColor="#99000000"
                android:shadowRadius="3.0"
                android:shadowDy="4.0"
                tools:text="$50"
                />

    </LinearLayout>

    <FrameLayout
            android:id="@+id/skz_done_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_bar_account">

        <com.skillz.widget.FontButton
                android:id="@+id/skz_btn_claimed_promo_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                style="@style/Button.Primary"
                android:text="DONE"/>
    </FrameLayout>

</RelativeLayout>