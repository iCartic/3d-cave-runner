<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    >

    <RelativeLayout
        android:id="@+id/skz_plow_live_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/inner_content_dark"
        >

        <RelativeLayout
            android:id="@+id/skz_plow_live_player_frame"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            >

            <com.skillz.widget.FontTextView
                android:id="@+id/skz_plow_live_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                app:font="fonts/HelveticaNeue-CondensedBlack.otf"
                tools:text="EnormousClock"
                />

            <ImageView
                android:id="@+id/skz_plow_live_flag"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/skz_plow_live_name"
                android:layout_marginLeft="46dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_flag_unknown"/>

            <LinearLayout
                android:id="@+id/skz_plow_live_entries_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:layout_centerVertical="true"
                android:background="@drawable/inner_content_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.skillz.widget.FontTextView
                    android:id="@+id/skz_plow_live_entries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/skz_plow_live_entries_count"
                    android:layout_toStartOf="@+id/skz_plow_live_entries_count"
                    android:paddingLeft="6dp"
                    android:text="@string/skz_plow_live_entries"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    app:font="fonts/HelveticaNeue-CondensedBlack.otf"
                    tools:text="@string/skz_plow_live_entries"/>

                <com.skillz.widget.FontTextView
                    android:id="@+id/skz_plow_live_entries_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:paddingLeft="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="24dp"
                    app:font="fonts/HelveticaNeue-CondensedBlack.otf"
                    tools:text="10"
                    />
            </LinearLayout>

            <com.skillz.widget.AvatarImageView
                android:id="@+id/skz_plow_live_avatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/avatar_bg_shadow"
                android:padding="4dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/skz_plow_live_your_score_frame"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/skz_plow_live_player_frame"
            android:background="@drawable/inner_content_highlight">

            <com.skillz.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="@string/skz_plow_live_your_score"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                app:font="fonts/HelveticaNeue-CondensedBlack.otf"
                tools:text="Your Score:"/>

            <com.skillz.widget.FontTextView
                android:id="@+id/skz_plow_live_your_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:textColor="@android:color/white"
                android:textSize="24dp"
                app:font="fonts/HelveticaNeue-CondensedBlack.otf"
                tools:text="754,123"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/skz_plow_live_best_score_frame"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/skz_plow_live_your_score_frame"
            android:background="@drawable/inner_content_dark">

            <com.skillz.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="@string/skz_plow_live_best_score"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                app:font="fonts/HelveticaNeue-CondensedBlack.otf"
                tools:text="Best Score:"/>

            <com.skillz.widget.FontTextView
                android:id="@+id/skz_plow_live_best_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:textColor="@android:color/white"
                android:textSize="24dp"
                app:font="fonts/HelveticaNeue-CondensedBlack.otf"
                tools:text="643,012"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
