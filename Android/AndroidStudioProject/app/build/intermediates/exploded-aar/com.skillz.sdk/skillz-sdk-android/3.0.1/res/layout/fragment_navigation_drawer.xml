<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_bg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/menu_ticketz"
            style="@style/NavItem"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_ticketz"
                android:layout_marginLeft="8dp"
                />
            <com.skillz.widget.FontTextView
                android:text="@string/skz_menu_ticketz"
                style="@style/NavItemText"
                />
            <ImageView style="@style/NavArrow" />
        </LinearLayout>

        <View style="@style/NavDiv" />

        <LinearLayout
            android:id="@+id/menu_friends"
            style="@style/NavItem"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_home"
                android:layout_marginLeft="8dp"
                />
            <com.skillz.widget.FontTextView
                android:text="@string/skz_menu_friends"
                style="@style/NavItemText"
                />
            <ImageView style="@style/NavArrow" />
        </LinearLayout>

        <View style="@style/NavDiv" />

        <LinearLayout
            android:id="@+id/menu_profile"
            style="@style/NavItem"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_profile"
                android:layout_marginLeft="8dp"
                />
            <com.skillz.widget.FontTextView
                android:text="@string/skz_menu_profile"
                style="@style/NavItemText"
                />
            <ImageView style="@style/NavArrow" />
        </LinearLayout>

        <View style="@style/NavDiv" />

        <LinearLayout
            android:id="@+id/menu_trophies"
            style="@style/NavItem"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_trophies"
                android:layout_marginLeft="8dp"
                />
            <com.skillz.widget.FontTextView
                android:text="@string/skz_menu_trophies"
                style="@style/NavItemText"
                />
            <ImageView style="@style/NavArrow" />
        </LinearLayout>

        <View style="@style/NavDiv" />

        <LinearLayout
            android:id="@+id/menu_account"
            style="@style/NavItem"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_account"
                android:layout_marginLeft="8dp"
                />
            <com.skillz.widget.FontTextView
                android:text="@string/skz_menu_account"
                style="@style/NavItemText"
                />
            <ImageView style="@style/NavArrow" />
        </LinearLayout>

        <View style="@style/NavDiv" />

        <LinearLayout
            android:id="@+id/menu_help"
            style="@style/NavItem"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_help"
                android:layout_marginLeft="8dp"
                />
            <com.skillz.widget.FontTextView
                android:text="@string/skz_menu_help"
                style="@style/NavItemText"
                />
            <ImageView style="@style/NavArrow" />
        </LinearLayout>

        <View style="@style/NavDiv" />

        <LinearLayout
            android:id="@+id/menu_exit_frame"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menu_exit"
                style="@style/NavItem">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_menu_exit"/>

                <com.skillz.widget.FontTextView
                    style="@style/NavItemText"
                    android:text="@string/skz_menu_exit"/>

                <ImageView style="@style/NavArrow"/>
            </LinearLayout>

            <View style="@style/NavDiv"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
