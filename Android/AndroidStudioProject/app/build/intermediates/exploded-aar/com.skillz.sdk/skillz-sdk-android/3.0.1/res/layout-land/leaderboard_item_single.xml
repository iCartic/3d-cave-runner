<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/leaderboard_item_bg"
    tools:background="@drawable/bg_rankings_highlight"
    android:paddingTop="4dp"
    android:gravity="center_vertical"
    android:id="@+id/item_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="5dp"
        >
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/skz_leader_rank"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_medal"
                    android:id="@+id/skz_leader_rank_badge"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />
                <com.skillz.widget.FontTextView
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    app:font="@string/skz_neue_black_cond"
                    tools:text="99"
                    tools:ignore="SpUsage"
                    android:id="@+id/skz_leader_rank_text"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/skz_leaderboard_single_item_prize_group"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center">

            <com.skillz.widget.FontTextView
                android:id="@+id/skz_leader_z_win_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                app:font="@string/skz_symbola"
                android:layout_toLeftOf="@+id/skz_leader_winnings"/>

            <com.skillz.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                app:font="@string/skz_neue_black_cond"
                tools:text="$35.25"
                android:id="@+id/skz_leader_winnings"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            >

            <LinearLayout
                android:id="@+id/flag_and_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green_light"
                    android:id="@+id/green_light"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_flag_unknown"
                    android:id="@+id/leader_custom_flag"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <com.skillz.widget.AvatarImageView
                android:layout_toRightOf="@id/flag_and_light"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="3dp"
                android:layout_centerVertical="true"
                android:background="@drawable/avatar_unknown"
                android:src="@drawable/avatar_unknown"
                android:id="@+id/skz_leader_avatar"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/skz_leader_avatar"
                android:layout_centerVertical="true"
                >
                <com.skillz.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/leaderboard_dark"
                    android:maxLines="1"
                    app:font="@string/skz_neue_light"
                    tools:text="EnormousClock"
                    android:id="@+id/skz_leader_name"
                    />
                <ImageView
                    android:layout_below="@+id/skz_leader_name"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_flag_unknown"
                    android:id="@+id/skz_leader_flag"
                    />
                <com.skillz.widget.FontTextView
                    android:id="@+id/event_score_label"
                    android:layout_below="@id/skz_leader_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/leaderboard_dark"
                    app:font="@string/skz_neue_black_cond"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/medal_layer"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:paddingRight="6dp"
            android:gravity="end"
            >
            <ImageView
                android:id="@+id/skz_leader_medal_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/leaderboard_medal_color"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                />
            <com.skillz.widget.FontTextView
                android:id="@+id/skz_leader_medal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/skz_leader_medal_logo"
                android:layout_centerVertical="true"
                android:gravity="end|center_vertical"
                android:text="3sp"
                android:textSize="22sp"
                app:font="@string/skz_neue_black_cond"
                android:textColor="@color/z_bottom"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:id="@+id/arrow_layout"
            >
            <ImageButton
                android:layout_width="15dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_rank_right"
                android:background="@null"
                android:id="@+id/arrow_image_button"
                />
            <View
                android:id="@+id/leader_item_vertical_divider"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#555"
                android:layout_marginRight="8dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/leaderboard_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_rank_list_middle"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        />
</LinearLayout>
