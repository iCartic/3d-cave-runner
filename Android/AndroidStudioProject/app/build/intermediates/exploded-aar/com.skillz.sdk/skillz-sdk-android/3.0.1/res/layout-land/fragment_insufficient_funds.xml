<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_bg"
        android:clipToPadding="false"
        >

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/Button.Dialog.Skip"
            android:translationX="10dp"
            android:translationY="-10dp"
            android:id="@+id/btn_close_dialog"
            />

    <LinearLayout
            android:id="@+id/username_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            >

        <com.skillz.widget.FontTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="33dp"
                android:textColor="#70706f"
                android:textStyle="bold"
                app:font="@string/skz_neue_black_cond"
                android:text="@string/skz_funds_title"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <com.skillz.widget.FontTextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#999999"
                    app:font="@string/skz_neue_black_cond"
                    android:text="@string/skz_funds_copy"
                    />

        </LinearLayout>

        <com.skillz.widget.FontButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Button.Primary"
                android:textSize="27sp"
                android:layout_marginTop="5dp"
                android:text="@string/skz_funds_deposit"
                android:id="@+id/skz_funds_add"
                />
    </LinearLayout>
</RelativeLayout>
