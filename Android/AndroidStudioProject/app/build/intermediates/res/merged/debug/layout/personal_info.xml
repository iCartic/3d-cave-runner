<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <com.skillz.widget.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Banner"
        android:text="@string/skz_personal_info_title"
        />
    <com.skillz.widget.FontEditText
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Input"
        android:inputType="text"
        android:hint="@string/skz_first"
        />
    <com.skillz.widget.FontEditText
        android:id="@+id/last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Input"
        android:inputType="text"
        android:hint="@string/skz_last"
        />
    <com.skillz.widget.FontEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Input"
        android:inputType="textEmailAddress"
        android:hint="@string/skz_email"
        />
</merge>
