<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.skillz.activity.EventScoreboardActivity">
    <RelativeLayout
        android:id="@+id/notification_container"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#fff"
        >
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/skillz_pickname_logo"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/top_banner"
        android:layout_marginBottom="-3dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/leaderboard_items_bg"
            android:layout_marginRight="2dp"
            >
            <com.skillz.widget.FontTextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:text="@string/skz_leaderboard_home_place"
                />
            <com.skillz.widget.FontTextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:text="@string/skz_leaderboard_home_prize"
                />
            <com.skillz.widget.FontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="@string/skz_leaderboard_home_players"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/leaderboard_items_bg"
            android:layout_marginLeft="2dp"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gametype_live_events"
                android:id="@+id/skz_leaderboard_league_icon"
                />
            <com.skillz.widget.FontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:textSize="10sp"
                app:gradientColors="@array/versus_vs"
                app:font="@string/skz_neue_black_cond"
                android:textAllCaps="true"
                android:id="@+id/skz_leaderboard_league"
                />
            <com.skillz.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                app:font="@string/skz_neue_light"
                app:gradientColors="@array/versus_vs"
                android:id="@+id/skz_leaderboard_ends"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/custom_items_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/leaderboard_users_bg"
            android:layout_margin="2dp"
            />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/save_account_elements_bg"
                android:layout_margin="2dp"
                >
                <LinearLayout
                    android:id="@+id/titles_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >
                    <com.skillz.widget.FontTextView
                        android:id="@+id/leader_header_in_prizes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        app:font="@string/skz_neue_light"
                        android:layout_gravity="center"
                        android:text="@string/skz_leaderboard_grand_prize"
                        app:gradientColors="@array/cash_gradient_colors"
                        />
                    <com.skillz.util.AutoResizeTextView
                        android:id="@+id/leader_header_guaranteed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"

                        android:textSize="50sp"
                        app:font="@string/skz_neue_black_cond"

                        app:gradientColors="@array/cash_gradient_colors"
                        />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                >
                <Button
                    android:id="@+id/see_more_button"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:text="@string/skz_leaderboard_see_more_details"
                    android:background="@drawable/lead_custom_prize_buttons"
                    />
                <Button
                    android:id="@+id/spectate_button"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:text="@string/skz_leaderboard_spectate"
                    android:background="@drawable/lead_custom_prize_buttons"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#000"
                >
                <com.skillz.widget.FontButton
                    android:id="@+id/play_again_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="@string/skz_play_again"
                    style="@style/Button.PlayAgainNewPLOW"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    >
                    <com.skillz.widget.FontButton
                        android:id="@+id/share_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:layout_margin="2dp"
                        android:text="@string/skz_share"
                        style="@style/Button.NextNewPLOW"
                        />
                    <com.skillz.widget.FontButton
                        android:id="@+id/next_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:layout_margin="2dp"
                        android:text="@string/skz_next"
                        style="@style/Button.NextNewPLOW"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/divider_top_banner"
            android:id="@+id/skz_leaderboard_header_divider"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/skz_leaderboard_header_prizes"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_medal_small_1st"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_z_small_white"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:id="@+id/skz_leaderboard_prize_z1"
                    />
                <com.skillz.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="25sp"
                    app:font="@string/skz_neue_black_cond"
                    app:gradientColors="@array/cash_gradient_colors"
                    tools:text="$150"
                    android:id="@+id/skz_leaderboard_prize_1st"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_medal_small_2nd"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_z_small_white"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:id="@+id/skz_leaderboard_prize_z2"
                    />
                <com.skillz.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:textSize="25sp"
                    app:font="@string/skz_neue_black_cond"
                    app:gradientColors="@array/cash_gradient_colors"
                    tools:text="$125"
                    android:id="@+id/skz_leaderboard_prize_2nd"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_medal_small_3rd"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_z_small_white"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:id="@+id/skz_leaderboard_prize_z3"
                    />
                <com.skillz.widget.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="25sp"
                    app:font="@string/skz_neue_black_cond"
                    app:gradientColors="@array/cash_gradient_colors"
                    tools:text="$100"
                    android:id="@+id/skz_leaderboard_prize_3rd"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
