<FrameLayout
    android:id="@+id/ftue_group"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-15dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/container_select_ftue"
    >

    <com.skillz.widget.FontTextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="@string/skz_select_ftue"
        android:id="@+id/tournament_catagory_highlight_text"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:font="@string/skz_neue_black_cond"/>

    <ImageView
        android:id="@+id/skz_downarrow_orangebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1px"
        android:src="@drawable/ic_downarrow_orangebar"/>
</FrameLayout>
