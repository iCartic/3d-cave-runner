<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/container_contact_us">

    <Spinner
        android:id="@+id/skz_contact_us_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/dropdown_menu"
        />

    <com.skillz.widget.FontEditText
        android:id="@+id/ticket_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skz_contact_us_spinner"
        android:layout_above="@+id/skz_contact_us_send_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        style="@style/Input"
        android:textSize="15sp"
        app:font="@string/skz_neue_roman"
        android:gravity="top"
        android:scrollHorizontally="true"
        android:inputType="textMultiLine"
        />

    <com.skillz.widget.FontButton
        android:id="@+id/skz_contact_us_send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="6dp"
        android:text="@string/skz_contact_us_send"
        style="@style/Button.Blue"/>

</RelativeLayout>