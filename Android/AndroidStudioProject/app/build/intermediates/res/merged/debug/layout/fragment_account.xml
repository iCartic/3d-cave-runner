<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#3F4660"
        >

    <ImageView
            android:id="@+id/skz_fragment_account_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/logged_in_user_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/my_account_info"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    style="@style/MenuItem"
                    >

                    <com.skillz.widget.FontTextView
                        android:text="@string/skz_my_account_info"
                        style="@style/MenuText"
                        />
                    <ImageView style="@style/MenuArrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_account_balance"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    style="@style/MenuItem"
                    >
                    <com.skillz.widget.FontTextView
                        android:text="@string/skz_my_account_balance"
                        style="@style/MenuText"
                        />
                    <ImageView style="@style/MenuArrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_account_withdraw"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    style="@style/MenuItem"
                    >
                    <com.skillz.widget.FontTextView
                        android:text="@string/skz_my_account_withdraw"
                        style="@style/MenuText"
                        />
                    <ImageView style="@style/MenuArrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_account_username"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    style="@style/MenuItem"
                    >
                    <com.skillz.widget.FontTextView
                        android:text="@string/skz_my_account_username"
                        style="@style/MenuText"
                        />
                    <ImageView style="@style/MenuArrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_account_password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    style="@style/MenuItem"
                    >
                    <com.skillz.widget.FontTextView
                        android:text="@string/skz_my_account_password"
                        style="@style/MenuText"
                        />
                    <ImageView style="@style/MenuArrow" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/my_account_save"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                android:visibility="gone"
                >
                <com.skillz.widget.FontTextView
                    android:text="@string/skz_my_account_save"
                    style="@style/MenuText"
                    />
                <ImageView style="@style/MenuArrow" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/my_account_switch"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    style="@style/MenuItem"
                    >

                <com.skillz.widget.FontTextView
                        android:text="@string/skz_my_account_switch"
                        style="@style/MenuText"
                        />

                <ImageView style="@style/MenuArrow"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/my_account_logout"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    style="@style/MenuItem"
                    >

                <com.skillz.widget.FontTextView
                        android:text="@string/skz_my_account_logout"
                        style="@style/MenuText"
                        />

                <ImageView style="@style/MenuArrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_account_settings"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                style="@style/MenuItem"
                >

                <com.skillz.widget.FontTextView
                    android:text="@string/skz_my_account_settings"
                    style="@style/MenuText"
                    />

                <ImageView style="@style/MenuArrow"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
