<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_unlocked">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp"
            android:background="@drawable/save_account_elements_bg">

            <com.skillz.widget.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skz_withdrawal_cash_out_winnings"
                app:font="@string/skz_neue_black_cond"
                android:textSize="20sp"
                android:layout_marginBottom="7dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/save_account_list_bg"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="-7dp"
                android:background="@drawable/tutorial_bg_store">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp">

                        <com.skillz.widget.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skz_withdrawal_balance_label"
                            android:layout_gravity="center_vertical"
                            app:font="@string/skz_neue_bold"
                            android:textSize="15sp"
                            android:textColor="@color/skz_withdrawal_text"
                            />
                        <com.skillz.widget.FontTextView
                            android:id="@+id/skz_withdrawal_account_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            app:font="@string/skz_neue_black_cond"
                            android:textColor="@color/skz_withdrawal_text"
                            tools:text="$1205.00"
                            android:textSize="15sp"
                            />
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="#aaa"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp">

                        <com.skillz.widget.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skz_withdrawal_available_label"
                            android:layout_gravity="center_vertical"
                            app:font="@string/skz_neue_bold"
                            android:textSize="15sp"
                            android:textColor="@color/skz_withdrawal_text"
                            />
                        <com.skillz.widget.FontTextView
                            android:id="@+id/skz_withdrawal_available_withdrawal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            app:font="@string/skz_neue_black_cond"
                            android:textColor="@color/skz_withdrawal_text"
                            tools:text="$1105.00"
                            android:textSize="15sp"
                            />
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="#aaa"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp">

                        <com.skillz.widget.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skz_withdrawal_amount_label"
                            android:layout_gravity="center_vertical"
                            app:font="@string/skz_neue_bold"
                            android:textSize="15sp"
                            android:textColor="@color/skz_withdrawal_text"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <com.skillz.widget.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textColor="@color/cash_top"
                                android:textSize="15dp"
                                app:font="@string/skz_neue_roman" />

                            <com.skillz.widget.FontEditText
                                android:id="@+id/skz_withdrawal_withdrawal_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:background="@android:color/transparent"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:maxLength="13"
                                android:shadowColor="#23000000"
                                android:shadowDy="2.0"
                                android:shadowRadius="3.0"
                                android:singleLine="true"
                                android:textColor="@color/cash_top"
                                android:textCursorDrawable="@drawable/input_cursor"
                                android:textSize="15dp"
                                app:font="@string/skz_neue_roman"
                                app:gradientColors="@array/cash_gradient_colors"
                                tools:text="1.00" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="#aaa"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp">

                        <com.skillz.widget.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skz_withdrawal_code"
                            android:layout_gravity="center_vertical"
                            app:font="@string/skz_neue_bold"
                            android:textSize="15sp"
                            android:textColor="@color/skz_withdrawal_text"
                            />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <com.skillz.widget.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:text="@string/skz_withdrawal_cash_out_disclaimer"
                android:textSize="13sp"
                android:textColor="@color/balance_item_white"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/skz_withdrawal_cash_out_footer"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/img_geotrust_logo"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/skz_withdrawal_cash_out_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="7dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@drawable/save_account_elements_bg">

        <com.skillz.widget.FontButton
            android:id="@+id/skz_withdrawal_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="@string/skz_cancel"
            android:padding="0dp"
            style="@style/Button.NextNewPLOW"
            />
        <com.skillz.widget.FontButton
            android:id="@+id/skz_withdrawal_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/skz_next"
            android:padding="0dp"
            style="@style/Button.PlayAgainNewPLOW"
            />
    </LinearLayout>
</RelativeLayout>
