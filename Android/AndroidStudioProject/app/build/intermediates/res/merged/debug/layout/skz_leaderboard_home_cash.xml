<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_banner"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/leaderboard_grey_box_bg"
                    >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_streamtype_rank_gold"
                            android:id="@+id/skz_leaderboard_league_icon"
                            />
                        <com.skillz.widget.FontTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="2dp"
                            android:textSize="15sp"
                            android:textColor="@android:color/white"
                            app:font="@string/skz_neue_black_cond"
                            android:text="@string/skz_leaderboard_cash_type"
                            app:gradientColors="@array/versus_vs"
                            android:textAllCaps="true"
                            android:id="@+id/skz_leaderboard_league"
                            />
                        <com.skillz.widget.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textSize="11sp"
                            android:textColor="@android:color/white"
                            app:font="@string/skz_neue_light"
                            app:gradientColors="@array/versus_vs"
                            tools:text="ENDS IN: 5 Days"
                            android:id="@+id/skz_leaderboard_ends"
                            />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/prizes_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/leaderboard_grey_box_bg">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true">

                                <com.skillz.widget.FontTextView
                                    android:id="@+id/leader_header_prize"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="50sp"
                                    app:font="@string/skz_neue_black_cond"
                                    app:gradientColors="@array/cash_gradient_colors"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/cash_bottom"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_vertical">

                                        <com.skillz.widget.FontTextView
                                            android:id="@+id/leader_header_in_prizes"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="26sp"
                                            app:font="@string/skz_neue_light"
                                            android:layout_gravity="center_vertical"
                                            android:text="@string/skz_leaderboard_title_in_prizes"
                                            app:gradientColors="@array/cash_gradient_colors"
                                            android:textColor="@color/cash_bottom"
                                            />
                                        <com.skillz.widget.FontTextView
                                            android:id="@+id/leader_header_guaranteed"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="21sp"
                                            app:font="@string/skz_neue_black_cond"
                                            app:gradientColors="@array/cash_gradient_colors"
                                            android:layout_gravity="center"
                                            android:text="@string/skz_leaderboard_title_guaranteed"
                                            android:textColor="@color/cash_bottom"
                                            />

                                </LinearLayout>
                        </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="vertical"
                    android:background="@drawable/leaderboard_grey_box_bg"
                    android:layout_marginTop="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                                <com.skillz.widget.FontTextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:textSize="14sp"
                                    android:text="@string/skz_leaderboard_home_place"
                                    />
                                <com.skillz.widget.FontTextView
                                    android:id="@+id/prizes_title"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:textSize="14sp"
                                    android:text="@string/skz_leaderboard_home_prize"
                                    />
                                <com.skillz.widget.FontTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:layout_marginLeft="3dp"
                                    android:textSize="14sp"
                                    android:text="@string/skz_leaderboard_home_players"
                                    />

                                <RelativeLayout
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal">

                                        <com.skillz.widget.FontTextView
                                            android:layout_width="60dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/medals_title"
                                            android:textSize="14sp"
                                            android:text="@string/skz_leaderboard_home_medals"
                                            />

                                </RelativeLayout>
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/skz_leaderboard_header_prizes"
                    android:visibility="gone"
                    >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:src="@drawable/ic_medal_small_1st"
                                    />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginRight="2dp"
                                    android:src="@drawable/ic_z_small_white"
                                    android:visibility="gone"
                                    tools:visibility="visible"
                                    android:id="@+id/skz_leaderboard_prize_z1"
                                    />
                                <com.skillz.widget.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:textSize="25sp"
                                    app:font="@string/skz_neue_black_cond"
                                    app:gradientColors="@array/cash_gradient_colors"
                                    tools:text="$150"
                                    android:id="@+id/skz_leaderboard_prize_1st"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:src="@drawable/ic_medal_small_2nd"
                                    />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginRight="2dp"
                                    android:src="@drawable/ic_z_small_white"
                                    android:visibility="gone"
                                    tools:visibility="visible"
                                    android:id="@+id/skz_leaderboard_prize_z2"
                                    />
                                <com.skillz.widget.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="6dp"
                                    android:gravity="center_vertical"
                                    android:textSize="25sp"
                                    app:font="@string/skz_neue_black_cond"
                                    app:gradientColors="@array/cash_gradient_colors"
                                    tools:text="$125"
                                    android:id="@+id/skz_leaderboard_prize_2nd"
                                    />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:src="@drawable/ic_medal_small_3rd"
                                    />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginRight="2dp"
                                    android:src="@drawable/ic_z_small_white"
                                    android:visibility="gone"
                                    tools:visibility="visible"
                                    android:id="@+id/skz_leaderboard_prize_z3"
                                    />
                                <com.skillz.widget.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:textSize="25sp"
                                    app:font="@string/skz_neue_black_cond"
                                    app:gradientColors="@array/cash_gradient_colors"
                                    tools:text="$100"
                                    android:id="@+id/skz_leaderboard_prize_3rd"
                                    />

                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/skz_leaders_home_container"
            />

    <com.skillz.widget.FontButton
        android:id="@+id/leader_home_all_ranking_cash"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:layout_margin="5dp"
        android:text="@string/skz_title_show_all_ranking"
        style="@style/Button.NextNewPLOW"/>

</LinearLayout>
