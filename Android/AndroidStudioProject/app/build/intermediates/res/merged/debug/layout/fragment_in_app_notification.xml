<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/skz_notification_root"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/banner_notification"
        android:padding="0dp" android:gravity="center_vertical">

    <ImageView
            android:id="@+id/skz_notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            tools:src="@drawable/ic_notification_trophy"
            android:layout_marginBottom="10dp" android:layout_marginTop="5dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" android:layout_marginBottom="8dp" android:layout_marginTop="2dp">

        <com.skillz.widget.FontTextView
                android:id="@+id/skz_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="@string/skz_neue_black_cond"
                android:textSize="14sp"
                android:textColor="@color/notifications_text"
                tools:text="TastyBarbarian completed their turn"
                android:singleLine="true"
                android:maxLines="1"
                />

        <com.skillz.widget.FontTextView
                android:id="@+id/skz_notification_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="@string/skz_neue_light_italic"
                android:textSize="13sp"
                android:textColor="@color/notifications_text"
                tools:text="It's your turn to play"
                android:singleLine="true"
                android:maxLines="1"
                />
    </LinearLayout>
</LinearLayout>
